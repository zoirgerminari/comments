{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "echo 'Building PHP project'",
    "watchPatterns": ["**/*.php"]
  },
  "deploy": {
    "startCommand": "php -S 0.0.0.0:$PORT api-comments.php",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
